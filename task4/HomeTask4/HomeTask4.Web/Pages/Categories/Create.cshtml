@page
@model HomeTask4.Web.Pages.Categories.CreateModel
@{
    ViewData["Title"] = "Category creation page";
}
<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group align-content-center flex-column">
            <input asp-for="Created.ParentId" hidden />
            <input asp-for="Created.Name" type="text" placeholder="Category Name" />
            <button asp-page-handler="Create" type="submit" class="btn btn-light">Create</button>
        </div>
    </form>
</div>